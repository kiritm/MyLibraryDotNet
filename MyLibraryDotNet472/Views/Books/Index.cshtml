@model IEnumerable<MyLibraryDotNet472.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>
<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

<h2>Book List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th width="290px">
            @Html.DisplayNameFor(model => model.BookTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookEdition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookAuthor1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookAuthor2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookPurchasePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookPublisher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookStorage_Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookFormat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th align="center">Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td width="490px">
                @Html.DisplayFor(modelItem => item.BookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookEdition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookAuthor1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookAuthor2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BCategory.BCategoryType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookPurchasePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookPublisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookStorage_Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BFormat.FormatType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
